{% block sidebar %}

    <div class="content-panel">
        <div class="content-panel-close">
            <i class="os-icon os-icon-close"></i>
        </div>

        <div class="game-action-links">
            <div class="pt-btn">
                <a class="btn btn-primary btn-block" data-target="#onboardingSlideModal" data-toggle="modal" type="button">Make A Bet</a>
            </div>
            <div class="clearfix"></div>
            <hr/>
        </div>

        <div class="element-wrapper game-page-members-container">
            <h6 class="element-header">
                Other Betters
            </h6>
            <div class="element-box-tp">

                <div class="users-list-w">

                    {% for bet in bets %}
                        <div class="user-w">
                            <div class="user-name">
                                <h6 class="user-title">
                                    {{ bet.user.firstName }} {{ bet.user.lastName }}
                                </h6>
                                <div class="user-role">
                                    Bet <span>{{ bet.pickValue }}</span> win.
                                </div>
                            </div>
                            <div class="user-action">
                                <div class="os-icon os-icon-menu"></div>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}

    <script src="{{ asset('js/game/game_page.js') }}"></script>
{% endblock %}


{% block modals %}

    <div class="onboarding-modal modal fade animated" id="onboardingSlideModal" role="dialog" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-centered" role="document">
            <div class="modal-content text-center">
                <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span class="close-label">Cancel Bet</span><span class="os-icon os-icon-close"></span></button>
                <div class="onboarding-slider-w slick-initialized slick-slider slick-dotted"><button class="slick-prev slick-arrow slick-disabled" aria-label="Previous" type="button" aria-disabled="true" style="">Previous</button>
                    <div class="slick-list draggable" style="height: 599.594px;">
                        <div class="slick-track" style="opacity: 1; width: 1650px; transform: translate3d(0px, 0px, 0px);"><div class="onboarding-slide slick-slide slick-current slick-active" data-slick-index="0" aria-hidden="false" tabindex="0" role="tabpanel" id="slick-slide00" aria-describedby="slick-slide-control00" style="width: 550px;">
                                <div class="onboarding-media">
                                    <img alt="" src="{{ asset('img/bigicon5.png') }}" width="200px">
                                </div>
                                <div class="onboarding-content with-gradient">
                                    <h4 class="onboarding-title">
                                        Let's Make Your Bet
                                    </h4>
                                    <div class="onboarding-text">
                                        In this example you can see a form where you can request some additional information from the customer when they land on the app page.
                                    </div>
                                    <form>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="">Amount</label>
                                                    <input id="bet_amount_input" class="form-control" placeholder="$12.00" type="number" value="" tabindex="0"/>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label for="">Your Pick</label>
                                                    <select id="bet_pick_input" class="form-control" tabindex="0">
                                                        <option value="Chicago Bears">
                                                            Chicago Bears
                                                        </option>
                                                        <option value="Green Bay Packers">
                                                            Green Bay Packers
                                                        </option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <button id="bet_submit" data-id="{{ app.user.id }}" class="slick-next" aria-label="Next" type="button" style="" aria-disabled="false">Submit Pick</button>

            </div>
        </div>
    </div>
    </div>

{% endblock %}